{
	"extends": "airbnb-base",
	"env": {
		"browser": true,
		"es6": true
	},
	"rules": {
		"quotes": ["error", "double"],
		"indent": ["error", "tab"],
		"semi": ["error", "never"],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true 
			}
		],
		"no-unused-vars": [
			"warn", 
			{
				"vars": "all",
				"args": "after-used",
				"ignoreRestSiblings": false
			}
		],
		"space-before-function-paren": [
			"error", 
			{
				"anonymous": "never",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"func-names": ["off", "never"],
		"no-param-reassign": ["off", "never"],
		"linebreak-style": ["off", "never"]
	}
}